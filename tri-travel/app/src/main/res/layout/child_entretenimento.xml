<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornsilk">


    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/option1_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrossel Animado - Custo: R$ 80,00" />

        <CheckBox
            android:id="@+id/option2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roda Gigante - Custo: R$ 120,00" />

        <CheckBox
            android:id="@+id/option3_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema 8d - Custo: R$ 50,00" />

        <CheckBox
            android:id="@+id/option4_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espaço Gourmet - Custo: R$ 150,00" />

        <CheckBox
            android:id="@+id/option5_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="História dos Carros - Custo: R$ 40,00" />

        <CheckBox
            android:id="@+id/option6_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teatro - Custo: R$ 80,00" />

        <CheckBox
            android:id="@+id/option7_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard Rock Café - Custo: R$ 30,00" />

        <CheckBox
            android:id="@+id/option8_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kart - Custo: R$ 70,00" />

        <CheckBox
            android:id="@+id/option9_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trilha para Cachoeira - Custo: R$ 90,00" />

        <CheckBox
            android:id="@+id/option10_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balada - Custo: R$ 60,00" />

    </LinearLayout>

    <TextView
        android:id="@+id/total_label_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsLayout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Total: XXX"
        android:textSize="16sp" />

</RelativeLayout>
